---
import { useState } from "preact/hooks";

const [role, setRole] = useState("");

function joinAs(roleType) {
  setRole(roleType);
  // Aquí conectarás con el backend
}
---

<html>
  <head>
    <title>Juego de Rol</title>
  </head>
  <body>
    <h1>Bienvenido al Juego de Rol</h1>
    
    <button onClick={() => joinAs("master")}>Entrar como Master</button>
    <button onClick={() => joinAs("player")}>Entrar como Player</button>
    
    {role && <p>Estás jugando como: {role}</p>}
  </body>
</html>
